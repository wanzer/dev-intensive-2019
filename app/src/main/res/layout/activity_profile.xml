<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileActivity">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ru.skillbranch.devintensive.ui.custom.AspectRatioImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_bg"
            app:aspectRatio="2.78" />

        <RelativeLayout
            android:id="@+id/edit_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/btn_switch_theme"
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="36dp"
                android:layout_toStartOf="@+id/iv_avatar"
                android:background="@drawable/btn_round_bg"
                android:src="@drawable/ic_switch_day_night" />

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/avatar_round_size"
                android:layout_height="@dimen/avatar_round_size"
                android:layout_centerHorizontal="true"
                android:src="@drawable/avatar_default" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                android:layout_marginStart="@dimen/spacing_huge_32"
                android:layout_marginTop="36dp"
                android:layout_toEndOf="@+id/iv_avatar"
                android:background="@drawable/btn_round_bg"
                android:src="@drawable/ic_edit_black_24dp" />

            <TextView
                style="@style/Profile.Header.Nickname"
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_avatar"
                android:layout_centerHorizontal="true"
                android:text="John Doe"
                android:textColor="@color/color_white" />

            <TextView
                style="@style/Profile.Header.Rank"
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nick_name"
                android:layout_centerHorizontal="true"
                android:text="Junior android developer"
                android:textColor="@color/color_white" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/colorAccentedSurface"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/raiting_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Profile.Metrics.Value"
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_sp_24"
                android:text="0"
                android:textColor="@color/color_white" />

            <TextView
                style="@style/Profile.Metrics.Label"
                android:id="@+id/tv_rating_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Рейтинг"
                android:textColor="@color/color_white" />

        </LinearLayout>

        <View
            android:id="@+id/divider_v"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:layout_marginBottom="@dimen/spacing_normal_16"
            android:background="@color/color_gray" />

        <LinearLayout
            android:id="@+id/respect_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Profile.Metrics.Value"
                android:id="@+id/tv_respect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_respect_24"
                android:text="0"
                android:textColor="@color/color_white" />

            <TextView
                style="@style/Profile.Metrics.Label"
                android:id="@+id/tv_respect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уважение"
                android:textColor="@color/color_white" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_name_container_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_name"
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:src="@drawable/ic_avatar" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/Profile.EditText.Single"
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:hint="Имя"
                tools:text="John" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_name_container_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_56"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/Profile.EditText.Single"
                android:id="@+id/et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:hint="Фамилия"
                tools:text="Doe" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_me_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_normal_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_about_me"
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:src="@drawable/ic_about" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wr_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_weight="1"
            app:counterEnabled="true"
            app:counterMaxLength="128">

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/Profile.EditText"
                android:id="@+id/et_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:imeOptions="actionNext"
                android:hint="О себе"
                tools:text="about me" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/repository_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_repository"
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:src="@drawable/ic_repo" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wr_repository"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginEnd="@dimen/spacing_normal_16"
            android:layout_weight="1"
            app:errorEnabled="true">

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/Profile.EditText.Single"
                android:id="@+id/et_repository"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:hint="Репозиторий"
                android:imeOptions="actionDone"
                tools:text="www.google.com" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/visible_iv"
            android:layout_width="@dimen/spacing_large_24"
            android:layout_height="@dimen/spacing_large_24"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/spacing_normal_16"
            android:src="@drawable/ic_eye_24dp" />
    </LinearLayout>


</LinearLayout>