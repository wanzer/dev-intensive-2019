<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_maximum_72"
    android:background="@color/color_white"
    android:padding="@dimen/spacing_normal_16">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="@dimen/spacing_small_8"
        android:src="@drawable/ic_check_black_24dp"
        tools:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_toRightOf="@+id/iv_check"
        android:src="@drawable/ic_avatar" />

    <View
        android:id="@+id/sv_indicator"
        android:layout_width="@dimen/font_small_12"
        android:layout_height="@dimen/font_small_12"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tv_user_name"
        android:visibility="gone"
        android:background="@drawable/bg_indicator"
        tools:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal_16"
        android:layout_toRightOf="@+id/iv_user_avatar"
        android:textStyle="bold"
        tools:text="User name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginLeft="@dimen/spacing_normal_16"
        android:layout_toRightOf="@+id/iv_user_avatar"
        tools:text="Online" />

</RelativeLayout>